#!/bin/bash
#~~#
#description: Destory glare - set tmux settings
#tags: []
#promptables: []
#
#---#



# PROMPTABLE USAGE GUIDE
#
# The following variables can be used in your script below.
#
#
# For more infomation see https://github.com/heydemo/add
#
#---#
#~~#

# Check if we are inside a tmux session
if [ -z "$TMUX" ]; then
    echo "You must run this script inside a tmux session."
    exit 1
fi

# Set the background color of the status bar to colour18 (dark blue)
tmux set-option -g status-bg colour18

# Set the foreground color of the text in the status bar to colour231 (bright white)
tmux set-option -g status-fg colour231

echo "Tmux status bar colors have been updated."


